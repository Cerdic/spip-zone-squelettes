<plugin>
	<nom>Un annuaire de site</nom>
    <auteur>[Pierre KUHN->http://pierre.beau-lieu-bec.org]
	&copy; 2009</auteur>
    <licence>Distribué sous licence GPL</licence>
    <version>0.4</version>
    <description>
	Faire un annuaire de site suivant votre théme
	<br />[Documentation->http://www.spip-contrib.net/?article3062].
    </description>
    <etat>dev</etat>
	<lien>[Annuaire de site->http://www.spip-contrib.net/Annuaire-pour-SPIP]</lien>
	<icon>img/annuaire.jpg</icon>
    <prefix>annuaire</prefix>
    <bouton id='annuaire' parent='configuration'>
	<icone>img/annuaire.jpg</icone>
		<titre>Configurer Annuaire</titre>
		<url>cfg</url>
		<args>cfg=annuaire_accueil</args>
	</bouton>

	<necessite id='SPIP' version='[2.0;]' />
	<necessite id="cfg" version='[1.12.5;]' />
	<necessite id="notation" version='[0.6.5;]' />
	<utilise id="nuage" version='[1.4;]' />
	<utilise id="visiteurs_connectes" version='[0.2;]' />
	<utilise id="palette" version='[1.2.1;]' />
</plugin>
