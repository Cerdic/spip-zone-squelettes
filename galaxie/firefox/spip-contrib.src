<search
   version = "7.1"
  	name="Spip-Contrib"
   	description="Spip-Contrib"
   	method="GET"
  	action="http://contrib.spip.net/moteur.php"
   	searchForm="http://contrib.spip.net"
>

<input name="recherche" user>
<input name="sourceid" value="mozilla-search">
<input name="sitesearch" value="http://contrib.spip.net">
<input name="domains" value="http://contrib.spip.net">

<interpret
   browserResultType="result"
    resultListStart='<tr bgcolor=#ffffff><td><table border=0 cellpadding=0 cellspacing=0>' 
    resultListEnd="<br clear=all>"
    resultItemStart="<p>" 
    resultItemEnd="<b>...</b>"
>
</search>

<browser
   update="http://contrib.spip.net/firefox/spip-contrib.src"
   updateIcon="http://contrib.spip.net/firefox/spip-contrib.png"
   updateCheckDays="60"
>
